-- GitHub Loadstring Script for "Get All Tools" Button

local player = game.Players.LocalPlayer
local replicatedStorage = game:GetService("ReplicatedStorage")

-- Create the "Get All Tools" button
local function createGetAllToolsButton()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = player:WaitForChild("PlayerGui")
    screenGui.Name = "GetAllToolsGui"

    -- Create the button
    local getAllToolsButton = Instance.new("TextButton")
    getAllToolsButton.Size = UDim2.new(0, 150, 0, 50)  -- Button size for mobile
    getAllToolsButton.Position = UDim2.new(0.5, -75, 0.5, -25)  -- Centered on screen
    getAllToolsButton.AnchorPoint = Vector2.new(0.5, 0.5)
    getAllToolsButton.Text = "Get All Tools"
    getAllToolsButton.TextColor3 = Color3.new(1, 1, 1)
    getAllToolsButton.BackgroundColor3 = Color3.new(0, 1, 0)
    getAllToolsButton.Parent = screenGui

    -- Function to give the player all the tools from ReplicatedStorage
    local function giveAllTools()
        -- Fetch the tools from a folder in ReplicatedStorage called "Tools"
        local toolsFolder = replicatedStorage:FindFirstChild("Tools")
        if not toolsFolder then
            warn("No 'Tools' folder found in ReplicatedStorage")
            return
        end

        -- Clone and give each tool to the player
        for _, tool in pairs(toolsFolder:GetChildren()) do
            if tool:IsA("Tool") then
                local clonedTool = tool:Clone()
                clonedTool.Parent = player.Backpack
            end
        end
    end

    -- Connect the button click to the function to give all tools
    getAllToolsButton.MouseButton1Click:Connect(function()
        giveAllTools()
    end)
end

-- Initialize the button on script run
createGetAllToolsButton()
